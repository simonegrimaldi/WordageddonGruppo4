<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminPanelController">

   <children>

      <!-- ðŸ”¹ Bottone Logout flottante in alto a destra -->
      <Button fx:id="logoutButton" onAction="#logoutButtonClick" styleClass="logoutButton" text="Logout" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="35.0" />

      <!-- Contenuto principale -->
      <VBox alignment="TOP_CENTER" layoutY="12.0" prefHeight="568.0" prefWidth="760.0" spacing="20" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">

         <!-- Titolo centrato -->
         <Label fx:id="titleLabel" prefHeight="57.0" prefWidth="196.0" styleClass="title" text="Hello admin !" />

         <!-- Selezione file -->
         <HBox alignment="CENTER" spacing="10" styleClass="fileChooserHbox">
            <Label styleClass="labelClass" text="Click here to select a file :" />
            <Button fx:id="openFileChooser" onAction="#openFileChooserClick" styleClass="buttonChooser" text="+" />
         </HBox>

         <!-- TextArea con margini -->
         <Label styleClass="labelClass" text="StopWords List :" />
         <TextArea fx:id="textArea" prefHeight="200.0" prefWidth="500.0" styleClass="textAreaClass">
            <VBox.margin>
               <Insets left="50.0" right="50.0" top="10.0" />
            </VBox.margin>
         </TextArea>

         <!-- Bottoni di azione -->
         <HBox alignment="CENTER" spacing="20" styleClass="buttonHbox">
            <Button fx:id="undoButton" onAction="#undoButtonClick" styleClass="undoButton" text="Undo" />
            <Button fx:id="confirmButton" onAction="#confirmButtonClick" styleClass="confirmButton" text="Confirm" />
         </HBox>
      </VBox>
   </children>
</AnchorPane>
